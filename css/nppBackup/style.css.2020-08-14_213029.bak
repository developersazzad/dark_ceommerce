/*============================================================
============================nav style required css start===========
=============================================================*/
ul.unstyled li a {
  list-style: none;
  text-decoration: none;
  font-size: 16px;
  margin: 8px;
}

a.nav_text {
  color: white;
}

a.nav_text:hover {
  color: orange;
}

@media (max-width:768px) {
  ul.unstyled li {
    margin-bottom: 10px;
  }

  .mt_sp {
    margin-top: 24px;
  }
}

/*============================================================
============================nav style required css end========
=============================================================*/
